int notes[] = {(sizeof(A_ha) / sizeof(A_ha[0]) / 2), (sizeof(Cantina) / sizeof(Cantina[0]) / 2) , (sizeof(got) / sizeof(got[0]) / 2)};
int tempo[]  = {200, 210, 140};
int music(char song, int thisNote) {
  
  noTone(buzzer);
  
  // we only play the note for 90% of the duration, leaving 10% as a pause
  tone(buzzer, songs[song][thisNote], noteDuration(song, thisNote) * 0.9);
  // Wait for the specief duration before playing the next note.
  delay(noteDuration(song, thisNote)%50);
  // stop the waveform generation before the next note.
  
  thisNote+=2;
  thisNote = thisNote <= notes[song] * 2 ? thisNote : 0;
  return thisNote;
}

int noteDuration(char song, int thisNote){
  int wholenote = (60000 * 4) / tempo[song];
  int divider = songs[song][thisNote + 1];
  if (divider > 0) {
    // regular note, just proceed
      return (wholenote) / divider;
  } else if (divider < 0) {
    // dotted notes are represented with negative durations!!
    return ((wholenote) / abs(divider)) *1.5; // increases the duration in half for dotted notes
  }
  return 0;
}
